{
  "plugins": [
    "react"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },

  "settings": {
    "react": {
      "createClass": "createReactClass", 
      "pragma": "React", 
      "version": "15.0", 
      "flowVersion": "0.53" 
    },
    "propWrapperFunctions": [ "forbidExtraProps" ]
  },

  "extends": [
    "google",
    "plugin:react/recommended"
  ],
  "rules" : {
    "indent": ["error", 2],
    "new-cap": ["off"],
  }
}